{
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": "..",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["server/**/*.ts", "shared/**/*.ts", "client/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
