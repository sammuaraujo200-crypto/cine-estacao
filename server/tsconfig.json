{
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": "..",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["../shared/**/*.ts", "./**/*.ts"]
}
